{
  "compilerOptions": {
    "target": "ES2020", // Update target for compatibility
    "module": "CommonJS", // Use CommonJS for Node.js
    "moduleResolution": "node", // Use node resolution strategy
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": false, // Changed from true to false
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types", "./types"], // Added typeRoots
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
